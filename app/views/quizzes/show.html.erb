<div>
  <div>
    <h1>
      Quiz #<%= @the_quiz.id %> details
    </h1>

    <div>
      <div>
        <a href="/quizzes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_quiz/<%= @the_quiz.id %>">
          Delete quiz
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Topic
      </dt>
      <dd>
        <%= @the_quiz.topic %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_quiz.created_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<%# @the_messages = Message.where({ :quiz_id => @the_quiz.id })  %>

<% @the_messages = @the_quiz.messages %>

<dl>
<% @the_messages.order(:created_at).each do |a_message| %>
  <dt>
    <%= a_message.role %>
  </dt>
  <dd>
    <%= a_message.body %>
  </dd>
<% end %>
</dl>
